{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../out-tsc/app",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "types": ["node", "web3"],
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@0xproject/typescript-typings/types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "stream": ["../../node_modules/stream-browserify/index.js"],
      "vm": ["../../node_modules/vm-browserify/index.js"],
      "crypto": ["../../node_modules/crypto-browserify/index.js"],
      "@muzika/core": ["../core/public_api.ts"],
      "@muzika/core/angular": ["../core/angular/public_api.ts"],
      "@muzika/core/browser": ["../core/browser/public_api.ts"],
      "@muzika/core/nodejs": [
        "../core/nodejs/public_api.ts"
      ],
      "@muzika/core/electron": ["../core/electron/index.ts"]
    }
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "dist",
    "app-builds",
    "node_modules"
  ]
}
