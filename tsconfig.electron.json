{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "types": ["node", "web3"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@0xproject/typescript-typings/types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@muzika/core": ["projects/core/index.ts"],
      "@muzika/core/angular": ["projects/core/angular/index.ts"],
      "@muzika/core/nodejs": ["projects/core/nodejs/index.ts"],
      "@muzika/core/browser": ["projects/core/browser/index.ts"],
      "@muzika/core/electron": ["projects/core/electron/index.ts"]
    }
  },
  "files": [
    "./main.ts"
  ],
  "exclude": [
    "dist",
    "app-builds",
    "node_modules"
  ]
}
